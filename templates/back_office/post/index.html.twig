{% extends 'base.html.twig' %}

{# Stylesheet dans le template base.html.twig #}

{% block title %}post index{% endblock %}

{% block body %}

    <h1>post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BeginAt</th>
                <th>EndAt</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.publishAt ? post.publishAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.titre }}</td>
                <td>
                    <a href="{{ path('app_back_office_post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_back_office_post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_office_post_new') }}">Create new</a>
    <a href="{{ path('app_back_office_post_new') }}">Create new post</a>

{% endblock %}

