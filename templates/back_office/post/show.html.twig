{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Pricing</th>
                <td>{{ post.pricing ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Share</th>
                <td>{{ post.share ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.titre }}</td>
            </tr>
            <tr>
                <th>Corps</th>
                <td>{{ post.corps }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ post.keywords }}</td>
            </tr>
            <tr>
                <th>PublishAt</th>
                <td>{{ post.publishAt ? post.publishAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_office_post_index') }}">back to list</a>

    <a href="{{ path('app_back_office_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('back_office/post/_delete_form.html.twig') }}
{% endblock %}
