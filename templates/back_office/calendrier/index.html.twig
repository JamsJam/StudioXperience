<style>
.mouse-follow{
    display: none;
    position: absolute;
    transition : max-height 0.5s ease;
    border-radius : 15px;
}

.mouse-follow-inactive{
    display: block;
    max-height: 0px !important;
    width: 250px;
    
}
.mouse-follow-active{
    display: block;
    max-height: 278px;
    width: 250px;
    z-index: 10;
    background-color : #45a5bf;
    
    }

.selectedDate{
    background: linear-gradient(359deg, #539eb3, #39d858);
    background-size: 400% 400%;

    -webkit-animation: backgroundGradient 3s ease infinite;
    animation: backgroundGradient 3s ease infinite;
    }

    @-webkit-keyframes backgroundGradient {
        0%{background-position:0% 88%}
        50%{background-position:100% 13%}
        100%{background-position:0% 88%}
    }
