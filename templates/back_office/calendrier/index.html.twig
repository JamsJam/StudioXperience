    <script type="text/javascript">

function setDate(event){

    let selectedDayDate = event.target.getAttribute("data-date")
    
    numbers = selectedDayDate.split('-')
    let month = parseInt(numbers[1].substring(1))
    let day = parseInt(numbers[2])
    let year = parseInt(numbers[0])

    // BeginAt
    let selectMonthBegin = document.querySelector("#calendrier_beginAt_date_month")
    let selectDayBegin = document.querySelector("#calendrier_beginAt_date_day")
    let selectYearBegin = document.querySelector("#calendrier_beginAt_date_year")

    selectMonthBegin.value = month
    selectDayBegin.value = day
    selectYearBegin.value = year

    //EndAt
    let selectMonthEnd = document.querySelector("#calendrier_endAt_date_month")
    let selectDayEnd = document.querySelector("#calendrier_endAt_date_day")
    let selectYearEnd = document.querySelector("#calendrier_endAt_date_year")

    selectMonthEnd.value = month
    selectDayEnd.value = day
    selectYearEnd.value = year
}


function setPosition(event){

    pageX = event.pageX;
    pageY = event.pageY;

    let calendarHolder = document.querySelector("#calendar-holder")
    let modalHeight = 278;
    let modalWidth = 250;
    let modalPercentageYOffset = (pageY / calendarHolder.offsetHeight) * 100;
    let modalPercentageXOffset = (pageX / window.innerWidth) * 100;

    if(modalPercentageYOffset > 108){
        mouseFollow.style.top = `${pageY - modalHeight}px`
    }else{
        mouseFollow.style.top = `${pageY}px`
    }
    if(modalPercentageXOffset > 65){
        mouseFollow.style.left = `${pageX - modalWidth - 5}px`
    }else{
        mouseFollow.style.left = `${pageX + 5}px`
    }
}

let mouseFollow = document.querySelector('.mouse-follow')
//quand isMouseActive est faux la modal mouseFollow s'affiche
let isMouseActive = true
let form = document.querySelector("form[name=\"calendrier\"]")

function updateDisplay(event) {

    if(event.target.hasAttribute("data-date")){
        // console.log(event);
        setDate(event)
        setPosition(event)
        
        //logique affichage de la modal
        if(isMouseActive){
            mouseFollow.classList.remove("mouse-follow-inactive")
            mouseFollow.classList.add("mouse-follow-active")
            //vue de la date selectionné et du formulaire
            event.target.classList.add("selectedDate") 
            form.classList.add("formShow")
            isMouseActive = false
        }else{
            mouseFollow.classList.add("mouse-follow-inactive")
            // mouseFollow.classList.remove("mouse-follow-active")
            // forEach pour select toutes les cases jour du tableau
            document.querySelectorAll(".fc-day").forEach(element => {
                element.classList.remove("selectedDate")
            });
            form.classList.remove("formShow")
            isMouseActive = true
        }
          
    }
}



document.addEventListener('DOMContentLoaded', () => {
    var calendarEl = document.getElementById('calendar-holder');
    
    //quand je click la modal mouseFollow se déplace à l'endroit de la souris
    calendarEl.addEventListener('click',updateDisplay,false)
    
    var calendar = new FullCalendar.Calendar(calendarEl, {
        defaultView: 'dayGridMonth',
        events : [
            {
                display : 'background'
            }
        ],
        editable: true,
            eventSources: [
                {
                    url: "{{ path('fc_load_events') }}",
                    method: "POST",
                    extraParams: {
                        filters: JSON.stringify({})
                    },
                    failure: () => {
                        // alert("There was an error while fetching FullCalendar!");
                    },
                },
            ],
        header: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek,timeGridDay',
        },
        plugins: [ 'interaction', 'dayGrid', 'timeGrid' ], // https://fullcalendar.io/docs/plugin-index
        timeZone: 'UTC',
        dateClick : function(info) {
            //Permet de configurer un event au click d'une date
            // console.log(info);
        },
        //permet de configuer toutes les dates 
        dayRender : function (dayRenderInfo) {
            // console.log(dayRenderInfo)
        }
        });
calendar.setOption('locale','fr')
calendar.render();
});         
            
    </script>

